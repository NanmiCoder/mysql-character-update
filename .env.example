# Database connection
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_NAME=your_database_name
DB_PASSWORD=your_password

# Character set configuration
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_general_ci
DB_ROW_FORMAT=Dynamic

# Table filtering (tables starting with this prefix will be skipped as views)
VIEW_PREFIX=v_

# Field types that need charset update (comma-separated)
FIELD_TYPES_TO_UPDATE=longtext,text,tinytext,char,varchar,json,mediumtext

# Set to true to preview changes without executing
DRY_RUN=false
